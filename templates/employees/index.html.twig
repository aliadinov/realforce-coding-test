{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-8 offset-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Employees</span>
                {% if employees|length %}
                    <span class="badge badge-secondary badge-pill">{{ employees|length }}</span>
                {% endif %}
            </h4>
            <ul class="list-group mb-3">
                {% for employee in employees %}
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">{{ employee.name }}, {{ employee.age }} years old</h6>
                        <small class="text-muted">
                            kids: {{ employee.getKidsCount() }};
                            {% if employee.getUsesCar() %}
                                wants to use a company car;
                            {% endif %}
                            gross salary: ${{ employee.gross }}
                        </small>
                    </div>
                    <span class="text-muted">
                        ${{ employee.getSalary() }}
                    </span>
                </li>
                {% else %}
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">No employees found</h6>
                        </div>
                    </li>
                {% endfor %}
            </ul>

            <div class="card p-2">
                <a href="{{ path('employee_create') }}" class="btn btn-secondary float-right">Add</a>
            </div>
        </div>
    </div>
{% endblock %}
